@page
@model Farmacia_Singleton.Pages.FamiliesModel
@{
    ViewData["Title"] = "Families";
}

<h2>Families</h2>

<div class="mb-3">
    <a asp-page="FamiliesCreate" class="btn btn-primary">New Family</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Therapeutic Area</th>
            <th>Description</th>
            <th>Created at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.FamiliesTable.Rows)
        {
            <tr>
                <td>@row["name"]</td>
                <td>@row["therapeutic_area"]</td>
                <td>@row["description"]</td>
                <td>@row["created_at"]</td>
                <td>
                    <a asp-page="FamiliesEdit" asp-route-id="@row["id"]" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@row["id"]" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">@Model.FamiliesTable.Rows.Count record(s)</td>
        </tr>
    </tfoot>
</table>